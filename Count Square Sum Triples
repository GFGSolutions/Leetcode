// User template for Java

class Solution {
  public int countTriples(int n) {
    int count = 0;
    for (int a = 1; a <= n; a++) {
      for (int b = 1; b <= n; b++) {
        int sumSquares = a * a + b * b;
        int c = (int)Math.sqrt(sumSquares);
        if (c <= n && c * c == sumSquares) {
          count++;
        }
      }
    }
    return count;
  }
}
