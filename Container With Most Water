// User template for Java

class Solution {
  public int maxArea(int[] height) {
    int left = 0;
    int right = height.length - 1;
    int maxArea = 0;
    while (left < right) {
      int width = right - left;
      int h = Math.min(height[left], height[right]);
      int area = h * width;
      if (area > maxArea) maxArea = area;

      if (height[left] < height[right]) {
        left++;
      } else {
        right--;
      }
    }
    return maxArea;
  }
}
